<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
            android:id="@+id/video_view_item"
            android:layout_width="213dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/video_play_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/play_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/video_view_item_header"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:linksClickable="true"
                android:layout_below="@+id/video_view_item"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/video_view_item_channel"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@+id/video_view_item_header"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:visibility="invisible"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>